<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Week0 Apps"
        android:id="@+id/main_page_label"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color Previewer Basic"
        android:id="@+id/color_previewer_basic_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color Previewer Real Time"
        android:id="@+id/color_previewer_real_time_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Player"
        android:id="@+id/video_player" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flags Easy"
        android:id="@+id/flags_easy" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flags Medium"
        android:id="@+id/flags_medium" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flags Hard"
        android:id="@+id/flags_hard" />
</LinearLayout>